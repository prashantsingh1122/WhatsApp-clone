{
  "name": "whatsapp-web-clone",
  "version": "1.0.0",
  "description": "A full-stack WhatsApp Web clone with Node.js backend and React frontend",
  "main": "index.js",
  "scripts": {
    "setup": "npm run setup:backend && npm run setup:frontend",
    "setup:backend": "cd backend && npm install",
    "setup:frontend": "cd frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm start",
    "start:backend": "cd backend && npm start",
    "build:frontend": "cd frontend && npm run build",
    "seed": "cd backend && npm run seed",
    "heroku-postbuild": "npm run setup:backend && npm run setup:frontend && npm run build:frontend"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/whatsapp-web-clone.git"
  },
  "keywords": [
    "whatsapp",
    "clone",
    "react",
    "nodejs",
    "mongodb",
    "socket.io",
    "realtime",
    "messaging"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
